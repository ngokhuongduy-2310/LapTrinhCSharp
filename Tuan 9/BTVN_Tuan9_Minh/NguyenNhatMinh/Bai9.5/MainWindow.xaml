<Window x:Class="Bai9._5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai9._5"
        mc:Ignorable="d"
        Title="Phần Mềm Chọn Game" Height="560" Width="560">
    <Grid Loaded="OnLoadingForm">
        <ListBox
            x:Name="lbItem"
            Margin="30,28,30,46">
            <ListBoxItem>
                <StackPanel
                    Orientation="Horizontal">
                    <CheckBox 
                        x:Name="chkGameCheck"
                        IsChecked="{Binding Choosed}"/>
                    <Image
                        Source="{Binding ImageAddress}"
                        Width="60"
                        Height="60" />
                    <Label
                        Content="{Binding GameName}"
                        FontSize="15" />
                </StackPanel>
            </ListBoxItem>
        </ListBox>
        <Button 
            x:Name="btnGoiDoUong"
            Content="Gọi đồ uống" 
            FontSize="15"
            HorizontalAlignment="Center" 
            Height="30" 
            Margin="0,444,0,0" 
            VerticalAlignment="Top" 
            Width="118"
            Click="setOnClick_btnGoiDoUong" />

    </Grid>
</Window>
